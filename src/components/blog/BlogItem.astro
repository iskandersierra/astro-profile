---
import type { BlogCollectionEntry } from '../../content/blog-content';
import FormattedDate from '../layouts/FormattedDate.astro';

interface Props {
    post: BlogCollectionEntry;
    featured?: boolean;
}

const { post, featured } = Astro.props;
---

<a href={`/blog/${post.slug}/`} class={`${featured && 'featured'}`}>
    <img width="100%" src={post.data.heroImage} alt={post.data.title} />
    <h4 class="title">{post.data.title}</h4>
    <p class="date">
        <FormattedDate date={post.data.pubDate} />
    </p>
</a>


<style>
    a {
        text-decoration: none;
        transition: 0.2s ease;
        display: block;
    }
    a img {
        aspect-ratio: auto;
    }
    .title {
        margin: 0;
        color: var(--gray-dark);
        line-height: 1;
    }
    .date {
        margin: 0;
        color: var(--gray);
    }
    @media (max-width: 720px) {
        .title {
            font-size: 1.563em;
        }
    }
</style>
